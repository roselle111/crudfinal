@{
    ViewBag.Title = "ShowUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userList = (IEnumerable<user>)ViewData["UserList"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Table Styles */
        .table-container {
            width: 100%;
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            box-sizing: border-box;
            transition: box-shadow 0.3s ease;
            margin-top: 50px; /* Adjust the margin-top to center the form */
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            border-radius: 8px;
        }

        th, td {
            border: unset;
            padding: 15px;
            text-align: left;
           /* border-bottom: 1px solid #ddd; */
        }

        tr:nth-child(even) {
            background: #f8f8f8;

        }
        th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .action-btns {
            display: flex;
            gap: 10px;
        }

        .edit-btn, .delete-btn {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .edit-btn {
            background-color: #28a745;
            color: #fff;
        }

            .edit-btn:hover {
                background-color: #218838;
            }

        .delete-btn {
            background-color: #dc3545;
            color: #fff;
        }

            .delete-btn:hover {
                background-color: #c82333;
            }

            footer p {
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="table-container">
        <table border="1">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in userList)
                {
                    <tr>
                        <td>@item.firstname</td>
                        <td>@item.lastname</td>
                        <td>@item.email</td>
                        <td>@item.password</td>
                        <td class="action-btns">
                            <form method="post" action="UserUpdate">
                                <input type="hidden" name="id" value="@item.userId" />
                                <button type="submit" class="edit-btn">Edit</button>
                            </form>

                            <form method="post" action="UserDelete">
                                <input type="hidden" name="id" value="@item.userId" />
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
